{
    "name": "Reckoning",
    "version": "0.1",
    "manifest_version": 3,
    "icons": { 
      "128": "assets/reckon.png"
    },
    "options_ui":  {
      "page": "pages/config.html",
      "open_in_tab": true
    },
    "permissions": [
      "activeTab", "notifications", "tabs", "tabGroups", "storage"
    ],
    "background": {
        "service_worker": "js/sw.js"
    },
    "commands": {
      "dedupwindow": {
        "description": "Dedup tabs in window",
        "suggested_key": {
          "default": "Alt+Shift+W"
        }
       },
       "dedupthistab": {
        "description": "Dedup this tab"
       },
       "dedupchrome": {
        "description": "Dedup chrome"
       },
       "grouptabs": {
        "description": "Create Tab Groups based on regex",
        "suggested_key": {
          "default": "Alt+Shift+T"
        }
       },
       "popit": {
        "description": "Kill tabs based on regex against URL AND title",
        "suggested_key": {
          "default": "Alt+Shift+X"
        }
       },
       "dynamicgroup": {
        "description": "Create ad-hoc tab group from regex",
        "suggested_key": {
          "default": "Alt+Shift+G"
        }
       }
    }
}
